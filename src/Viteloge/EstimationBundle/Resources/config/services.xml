<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>

    <service id="viteloge_estimation.form.type.estimation" class="Viteloge\EstimationBundle\Form\Type\EstimationType">
      <tag name="form.type" alias="estimation"/>
    </service>

    <service id="viteloge_estimation.form.type.contact_estimation" class="Viteloge\EstimationBundle\Form\Type\ContactEstimationType">
      <tag name="form.type" alias="contact_estimation"/>
    </service>

    <service id="viteloge_estimation.form.type.intro_estimation" class="Viteloge\EstimationBundle\Form\Type\IntroEstimationType">
      <tag name="form.type" alias="intro_estimation"/>
    </service>

    <service id="viteloge_estimation.estimation.handler" class="Viteloge\EstimationBundle\Entity\EstimationHandler">
      <argument type="service" id="doctrine.orm.default_entity_manager" />
    </service>

    <service id="viteloge_estimation.estimation.computer" class="Viteloge\EstimationBundle\Service\EstimationComputer">
      <argument type="service" id="doctrine.orm.default_entity_manager" />
    </service>


  </services>

</container>
