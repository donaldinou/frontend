{% trans_default_domain 'FOSUserBundle' %}

<div class="" itemscope itemtype="http://schema.org/Person">
    <span itemprop="name">{{ user.fullname }}</span>
    <p>{{ 'profile.show.civility'|trans }}: {{ user.civility }}</p>
    <p>{{ 'profile.show.firstname'|trans }}: {{ user.firstname }}</p>
    <p>{{ 'profile.show.lastname'|trans }}: {{ user.lastname }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <abbr title="Phone">{{ 'profile.show.phone'|trans }}: <a href="callto:{{user.phone}}">{{ user.phone }}</a></p>
    <address>

    </address>
</div>

<a class="btn btn-default" href="{{ path('viteloge_frontend_user_index') }}" role="button">
    <span class="glyphicon glyphicon-remove"></span>&nbsp;
    {% trans %}Back{% endtrans %}
</a>
<a class="btn btn-default" href="{{ path('fos_user_change_password') }}" role="button">
    <span class="glyphicon glyphicon-refresh"></span>&nbsp;
    {% trans %}Change password{% endtrans %}
</a>
<a class="btn btn-default" href="{{ path('fos_user_profile_edit') }}" role="button">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {% trans %}Edit{% endtrans %}
</a>
