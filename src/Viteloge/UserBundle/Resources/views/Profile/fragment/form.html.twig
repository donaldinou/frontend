{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'attr': {'action': path('fos_user_profile_edit'), 'enctype': 'application/x-www-form-urlencoded', 'class': 'fos_user_profile_edit form-horizontal', 'role': 'form', 'novalidate': 'novalidate'}}) }}
    {% if form.vars.errors|length > 1 or not form.vars.valid %}
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">{% trans %}Error{% endtrans %}:</span>
            {{ dump(form) }}
            {{ form_errors(form) }}
            {{ form_errors(form.civility) }}
            {{ form_errors(form.firstname) }}
            {{ form_errors(form.lastname) }}
            {{ form_errors(form.email) }}
            {{ form_errors(form.phone) }}
            {{ form_errors(form.partnerContactEnabled) }}
        </div>
    {% endif %}
    <div class="hidden">
        {{ form_row(form._token) }}
    </div>
    <div class="form-group">
        {{ form_label(form.civility, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.civility, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.firstname, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.lastname, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.email, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 checkbox">
            <label class="" for="fos_user_profile_form_partnerContactEnabled">
                {{ form_widget(form.partnerContactEnabled, {'attr': {'class': ''}}) }}
                {% trans %}Partner contact enabled{% endtrans %}
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-default form-control">{{ 'profile.edit.submit'|trans }}</button>
{{ form_end(form, {'render_rest': false}) }}
