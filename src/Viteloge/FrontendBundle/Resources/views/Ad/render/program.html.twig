<figure class="program">
    <div class="program-images center-block">
        {%- block estate_images -%}
            <a href="{{ path('viteloge_frontend_ad_redirect', { 'id': ad.id }) }}">
                <img src="{{ 'http://img.viteloge.com/' ~ ad.photo }}" class="responsive-image program-preview">
            </a>
        {%- endblock estate_images -%}
    </div>
    <figcaption class="program-legend">
        <h5 class="title">
            {%- block estate_title  -%}
                {{ ad.cityName }} - {{ ad.program }}
            {%- endblock estate_title -%}
        </h5>
        <p class="description text-center" data-role="description">
            {%- block program_description -%}
                {%- transchoice ad.programCount with { '%count%': ad.programCount } -%}
                    ad.program.count
                {%- endtranschoice -%}
            {%- endblock program_description -%}
        </p>
    </figcaption>
</figure>
