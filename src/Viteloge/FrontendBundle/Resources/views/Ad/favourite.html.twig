{% extends 'VitelogeFrontendBundle::base.html.twig' %}

{%- block schema -%}
    itemscope itemtype="http://schema.org/WebPage"
{%- endblock schema -%}

{%- block head_javascripts -%}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&amp;libraries=geometry"></script>
{%- endblock -%}

{%- block header -%}
    {%- embed "VitelogeUserBundle:base:headerSearch.html.twig" with {form:form} -%}
        {%- block header_navbarheader -%}

        {%- endblock -%}

    {%- endembed -%}
{%- endblock -%}
{%- block breadcrumb %}
 {{ wo_render_breadcrumbs() }}
{% endblock breadcrumb -%}
{%- block header_more -%}
        <div class="subheader-paginate">
            <div class="col-sm-12 col-md-12 col-lg-12 header-pagination">
        {%- if pagination is defined -%}
                <span>
             {%- block pagination -%}
            {%- if pagination is not null and pagination.haveToPaginate -%}
                {{- pagerfanta(pagination, 'pager_viteloge', {
                    'routeParams': app.request.query.all
                }) -}}
            {%- endif -%}
        {%- endblock pagination -%}
        <span>
           {%- endif -%}
            </div>

        </div>

{%- endblock header_more -%}
{%- block header_end -%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-10 col-md-9 col-lg-9">

                {% set count = pagination.nbResults|default(ads|length) %}

            <h1 class="small_header">{% transchoice count with { '%count%' : count} %}ads.count.favourite{% endtranschoice %}</h1>
            </div>

        </div>
    </div>

{%- endblock -%}

{%- block main -%}
    {% embed "VitelogeUserBundle:grid:two-columns.html.twig" with { 'lsize': 9, 'rsize': 3 } %}
        {% block left %}
            {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") or not app.user %}
                {{ render_hinclude(path('viteloge_frontend_user_registermodal', {})) }}
            {%- endif -%}
            {{ include('VitelogeFrontendBundle:Ad:fragment/paginated_favourite.html.twig', {}) }}
        {% endblock %}
        {% block right %}
            {%- embed "VitelogeFrontendBundle:Block:aside_right.html.twig" -%}
                {%- block aside_before_adsense1 -%}
                    {%- if form is defined and form.vars.value.where and form.vars.value.where.0 -%}
                        {{- render_hinclude(path('viteloge_frontend_suggest_near', { 'name': 'test', 'id': form.vars.value.where.0, 'radius': constant('Viteloge\\CoreBundle\\Component\\Enum\\DistanceEnum::TEN'), 'limit': 10, '_format': 'html' })) -}}
                    {%- endif -%}
                {%- endblock aside_before_adsense1 -%}
            {%- endembed -%}
        {% endblock %}
    {% endembed %}
{%- endblock main -%}

{%- block javascripts -%}
    {{ parent() }}
    <script>
        jQuery(document).ready(function() {
            displayInput();
        });
    </script>
{%- endblock javascripts -%}
