{% extends 'VitelogeFrontendBundle::base.html.twig' %}

{%- block schema -%}
    itemscope itemtype="http://schema.org/WebPage"
{%- endblock schema -%}

{%- block head_javascripts -%}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&amp;libraries=geometry"></script>
{%- endblock -%}

{%- block header -%}
    {%- embed "VitelogeUserBundle:base:headerSearch.html.twig" with {form:form} -%}
        {%- block header_navbarheader -%}

        {%- endblock -%}

    {%- endembed -%}
{%- endblock -%}
{%- block breadcrumb %}

 <div class="container-fluid">
        <div class="row no-padding subrow">
            <div class="col-sm-3 col-md-4 col-lg-3 no-padding">
            {{ wo_render_breadcrumbs() }}
           </div>

        <div class="col-sm-6 col-md-2 col-lg-4 header-pagination no-padding">
           {%- if pagination is defined -%}
             {%- block pagination -%}
            {%- if pagination is not null and pagination.haveToPaginate -%}
                {{- pagerfanta(pagination, 'pager_viteloge', {
                    'routeParams': app.request.query.all
                }) -}}
            {%- endif -%}
        {%- endblock pagination -%}
           {%- endif -%}
        </div>
         <div class="col-sm-3 col-md-6 col-lg-5 text-right no-padding">

                {% set count = pagination.nbResults|default(ads|length) %}
                    {% if app.request.attributes.get('_route') == 'viteloge_frontend_ad_latest_list' %}
                        <h1 class="small_header">{% transchoice count with { '%count%' : count} %}ads.count.last{% endtranschoice %}</h1>
                    {% else %}
                    {% if ads[0].cityName is defined and ads[0].cityName is not empty %}
                    {% if ads[0].transaction is defined and ads[0].transaction is not empty %}
                 {% if ads[0].transaction == 'V' %}
                    {% set transac = 'à vendre'%}
                {% elseif ads[0].transaction == 'L'%}
                    {% set transac = 'à louer'%}
                {% else %}
                    {% set transac ='neufs'%}
                {% endif %}
                    <h1 class="small_header">{% transchoice count with { '%count%' : count, '%city%': ads[0].cityName,'%transac%':transac} %}ads.count.research.city.transac{% endtranschoice %}</h1>
                 {% else %}
                <h1 class="small_header">{% transchoice count with { '%count%' : count, '%city%': ads[0].cityName} %}ads.count.research.city{% endtranschoice %}</h1>
            {% endif %}
        {% else %}
            <h1 class="small_header">{% transchoice count with { '%count%' : count} %}ads.count.research{% endtranschoice %}</h1>
        {% endif %}
        {% endif %}
            </div>
       </div>
    </div>
{% endblock breadcrumb -%}
{%- block header_more -%}


{%- endblock header_more -%}
{%- block header_end -%}


{%- endblock -%}

{%- block main -%}
    {% embed "VitelogeUserBundle:grid:two-columns.html.twig" with { 'lsize': 9, 'rsize': 3 } %}
        {% block left %}
            {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") or not app.user %}
                {{ render_hinclude(path('viteloge_frontend_user_registermodal', {})) }}
            {%- endif -%}
            {{ include('VitelogeFrontendBundle:Ad:fragment/paginated.html.twig', {}) }}
        {% endblock %}
        {% block right %}
            {%- embed "VitelogeFrontendBundle:Block:aside_right.html.twig" -%}
                {%- block aside_before_adsense1 -%}
                    {%- if form is defined and form.vars.value.where and form.vars.value.where.0 -%}
                        {{- render_hinclude(path('viteloge_frontend_suggest_near', { 'name': 'test', 'id': form.vars.value.where.0, 'radius': constant('Viteloge\\CoreBundle\\Component\\Enum\\DistanceEnum::TEN'), 'limit': 10, '_format': 'html' })) -}}
                    {%- endif -%}
                {%- endblock aside_before_adsense1 -%}
            {%- endembed -%}
        {% endblock %}
    {% endembed %}
{%- endblock main -%}

{%- block javascripts -%}
    {{ parent() }}
{%- endblock javascripts -%}
