{% extends 'VitelogeFrontendBundle::base.html.twig' %}
{%- block header -%}
    {%- embed "VitelogeUserBundle:base:smallHeaders.html.twig" with {key:key,form:form} -%}
        {%- block header_navbarmenu -%}
            <div class="collapse navbar-collapse" id="navbar-navigation">
                {{- block('header_brand') -}}
                {{- block('header_identification') -}}
            </div>
        {%- endblock -%}
    {%- endembed -%}
{%- endblock -%}
{%- block flash -%}
    {{- include('VitelogeUserBundle:base:flash.html.twig', { hideContainer: true }) -}}
{%- endblock flash -%}

{%- block main -%}

  <iframe src="{{ ad.url }}" width="100%" height="100%" style="background-color: #eee;
    border: medium none;
    position: absolute; "></iframe>

{%- endblock -%}
{%- block footer -%}

{%- endblock -%}
{%- block header_end %}
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-sm-10 col-md-9 col-lg-9">
                <p><small><b style="text-transform: uppercase;">{{ ad.type }} {{ ad.cityName }} {% trans %} ad.at {% endtrans %} {{ ('footer.transaction.article.'~ad.transaction)|trans }} ({{ ad.postalcode }}) - {{ ad.price | schematizedcurrency('EUR') | raw }}</b><br>
                    {{ ad.advancedDescription|truncate(500, false, '...')|normalize_utf8|raw }} </small></p>
            </div>
            <div class="col-sm-2 col-md-3 col-lg-3 text-right hidden-xs">

            </div>
        </div>

    </div>

{% endblock -%}
{%- block javascripts -%}
    {{- parent() -}}
    <script>
        jQuery(document).ready(function() {
            displayInput();
        });
    </script>
{%- endblock javascripts -%}
