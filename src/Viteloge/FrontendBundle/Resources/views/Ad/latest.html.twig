        {% set transaction = transaction|default('you') %}
        {%- trans with { '%transaction%': 'ad.transaction.'~transaction|trans, '%name%': cityName|default('from you'|trans) } -%}
            Properties for %transaction% near %name%
        {% endtrans %}
    {%- endblock ad_latest_title -%}
