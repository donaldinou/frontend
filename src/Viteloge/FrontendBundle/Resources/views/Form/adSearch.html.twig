{% form_theme form with ['VitelogeFrontendBundle:Form:fields.html.twig'] %}

{{ form_start(form, {'action': path('viteloge_frontend_ad_searchfromform'), 'attr': {'enctype': 'application/x-www-form-urlencoded','class': 'search', 'role': 'search', 'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
    <div class="hidden">
        {{ form_row(form._token) }}
    </div>
    {{ form_widget(form.transaction, { label_attr: { 'class': 'radio-inline' } }) }}
    <fieldset class="bg-darken text-left" role="tabpanel">
        <div class="row">
            <div class="col-md-4">
                {{ form_widget(form.where, { 'attr': { 'class': '',  'placeholder': 'Where', autocomplete: 'off', spellcheck: 'off', 'maxlength': 100 } }) }}
            </div>
            <div class="col-md-4">
                {{ form_widget(form.what, { 'attr': { 'class': '' } }) }}
            </div>
            <div class="col-md-4">
                {{ form_widget(form.rooms, { 'attr': { 'class': '', 'placeholder': 'Rooms number' } }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_widget(form.minPrice, { 'attr': { 'class': '',  'placeholder': 'Minimum Price', 'maxlength': 10 } }) }}
            </div>
            <div class="col-md-4">
                {{ form_widget(form.maxPrice, { 'attr': { 'class': '', 'placeholder': 'Maximum Price', 'maxlength': 10 } }) }}
            </div>
            <div class="col-md-4">
                {{ form_widget(form.search, { 'label': 'Search', 'span_class': 'fa fa-search', 'attr': { 'class': 'btn btn-primary btn-block text-uppercase', 'role': 'button' } }) }}
            </div>
        </div>
        <div class="row hidden">
            <div class="col-md-12">
                <a id="see-more" href="#search-more">{% trans %}Advanced search{% endtrans %}</a>
            </div>
        </div>
    </fieldset>
{{ form_end(form, {'render_rest': false}) }}
