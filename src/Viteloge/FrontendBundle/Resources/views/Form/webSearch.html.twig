{% form_theme form with ['VitelogeFrontendBundle:Form:fields.html.twig'] %}

{%- block form_start -%}
{{ form_start(form, {'attr': {'enctype': 'application/x-www-form-urlencoded','class': 'form', 'role': 'form', 'novalidate': 'novalidate'}}) }}
{%- endblock form_start -%}
    {%- block form_errors -%}
        {{ form_errors(form) }}
    {%- endblock form_errors -%}
    {%- block form_fields -%}
        <div class="hidden">
            {{ form_row(form._token) }}
        </div>
        {{ form_row(form.title, {
            'attr': {
                'class': '',
                'placeholder': 'websearch.title',
                'data-placeholder' : 'websearch.title'|trans(),
                'autocomplete': 'off',
                'spellcheck': 'on',
                'maxlength': 100
            }
        }) }}
        {{ form_row(form.userSearch.inseeCity, {
            'attr': {
                'class': 'select-tag-input',
                'data-placeholder' : 'usersearch.inseecity'|trans() ~ ' ...',
                'data-allow-clear' : 'true',
                'data-ajax--url' : path('viteloge_frontend_suggest_cities'),
                'data-ajax--cache' : 'true',
                'data-ajax--data-type' : 'json'
            }
        }) }}
        {{ form_row(form.userSearch.radius, {
            'attr': {
                'class': 'select-tag-input',
                'placeholder': 'usersearch.radius',
                'data-placeholder' : 'usersearch.radius'|trans(),
                'data-allow-clear' : 'false'
            }
        }) }}
        {{ form_row(form.userSearch.transaction, {
            'attr': {
                'class': '',
                'placeholder': 'usersearch.transaction',
                'data-placeholder' : 'usersearch.transaction'|trans()
            }
        }) }}
        {{ form_row(form.userSearch.type, {
            'attr': {
                'class': 'select-tag-input',
                'placeholder': 'usersearch.type',
                'data-placeholder' : 'usersearch.type'|trans(),
                'data-allow-clear' : 'true'
            }
        }) }}
        {{ form_row(form.userSearch.rooms, {
            'attr': {
                'class': 'select-tag-input',
                'placeholder': 'usersearch.rooms',
                'data-placeholder' : 'usersearch.rooms'|trans(),
                'data-allow-clear' : 'true'
            }
        }) }}
        {{ form_row(form.userSearch.budgetMin, {
            'attr': {
                'class': '',
                'placeholder': 'usersearch.budgetMin',
                'data-placeholder' : 'usersearch.budgetMin'|trans(),
                'autocomplete': 'off',
                'spellcheck': 'off',
                'maxlength': 10
            }
        }) }}
        {{ form_row(form.userSearch.budgetMax, {
            'attr': {
                'class': '',
                'placeholder': 'usersearch.budgetMax',
                'data-placeholder' : 'usersearch.budgetMax'|trans(),
                'autocomplete': 'off',
                'spellcheck': 'off',
                'maxlength': 10
            }
        }) }}
        {{ form_row(form.userSearch.keywords, {
            'attr': {
                'class': '',
                'placeholder': 'usersearch.keywords',
                'data-placeholder' : 'usersearch.keywords'|trans(),
                'autocomplete': 'off',
                'spellcheck': 'on',
                'maxlength': 100
            }
        }) }}
        {{ form_row(form.userSearch.helpEnabled, {
            'attr': {
                'class': '',
                'placeholder': 'usersearch.helpEnabled',
                'data-placeholder' : 'usersearch.helpEnabled'|trans()
            }
        }) }}
        {{ form_row(form.userSearch.mailEnabled, {
            'attr': {
                'class': '',
                'placeholder': 'usersearch.mailEnabled',
                'data-placeholder' : 'usersearch.mailEnabled'|trans()
            }
        }) }}
    {%- endblock form_fields -%}
    {%- block form_button -%}
        {%- embed 'VitelogeCoreBundle:Form:submit.html.twig' -%}
            {%- block form_button_back -%}
                <a href="{{ path('viteloge_frontend_websearch_list') }}" class="btn btn-default btn-block" role="button" aria-label="{% trans %}usersearch.action.back{% endtrans %}">
                    <span class="fa fa-undo" aria-hidden="true">&nbsp;</span>
                    <span>{% trans %}usersearch.action.back{% endtrans %}</span>
                </a>
            {%- endblock -%}
            {%- block form_button_submit -%}
                {{ form_widget(form.userSearch.save, {
                    'label': 'usersearch.action.save',
                    'span_class': 'fa fa-save',
                    'attr': {
                        'class': 'btn btn-primary btn-block text-uppercase',
                        'role': 'button'
                    }
                }) }}
            {%- endblock -%}
        {%- endembed -%}
    {%- endblock form_button -%}
{%- block form_end -%}
{{ form_end(form) }}
{%- endblock form_end -%}
