{# extends box #}

{% set id = id|default('panel-' ~ random()) %}
<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="{{ id }}-title">
        {%- block panel_heading -%}
            <h3 class="panel-title">
                <a class="{% if show is not defined or not show %}collapsed{% endif %}" data-toggle="collapse" data-parent="#{{ parent }}" href="#{{ id }}" aria-expanded="true" aria-controls="{{ id }}">{%- block panel_title -%}{%- endblock panel_title -%}</a>
                {%- block panel_buttons -%}{%- endblock panel_buttons -%}
            </h3>
        {% endblock panel_heading %}
    </div>
    <div id="{{ id }}" class="panel-collapse collapse{% if show is defined and show %} in{% endif %}" role="tabpanel" aria-labelledby="{{ id }}-title">
        {%- block panel_content -%}
            <div class="panel-body">
                {%- block panel_body -%}

                {%- endblock panel_body -%}
            </div>
            {%- if footer is defined and footer -%}
                <div class="panel-footer">
                    {%- block panel_footer -%}

                    {%- endblock panel_footer -%}
                </div>
            {%- endif -%}
        {%- endblock panel_content -%}
    </div>
</div>
